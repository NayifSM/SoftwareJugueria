@model Ventas.Web.Models.CambiarContraseña

@{
    ViewData["Title"] = "ChangePassword";
}

<h2>Change Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="AntiguaContraseña">Current password</label>
                <input asp-for="AntiguaContraseña" type="password" class="form-control" />
                <span asp-validation-for="AntiguaContraseña" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="NuevaContraseña">New password</label>
                <input asp-for="NuevaContraseña" type="password" class="form-control" />
                <span asp-validation-for="NuevaContraseña" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Confirmar">Confirm</label>
                <input asp-for="Confirmar" type="password" class="form-control" />
                <span asp-validation-for="Confirmar" class="text-warning"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-exchange"></i> Change password</button>
                <a asp-action="ChangeUser" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to user</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
